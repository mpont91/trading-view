---
import Layout from '../layouts/Layout.astro'
import EvaluationList from '../components/domain/evaluations/EvaluationList.vue'
---

<Layout title="Evaluations - Trading Bot">
  <div class="space-y-6">
    <header class="flex justify-between items-end">
      <div>
        <h1 class="text-3xl font-bold text-white tracking-tight">
          Evaluations
        </h1>
        <p class="text-zinc-400 mt-1">
          History of opportunities detected by the bot.
        </p>
      </div>
    </header>

    <section>
      <EvaluationList client:load />
    </section>
  </div>
</Layout>
