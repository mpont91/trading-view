---
import IndexLayout from '../layouts/IndexLayout.astro'
import SymbolDashboard from '../components/dashboards/SymbolDashboard.vue'

const symbolParam: string | undefined = Astro.params.symbol

if (!symbolParam) {
  throw new Error('Symbol is required')
}

const symbol: string = symbolParam as string
---

<IndexLayout>
  <header>
    <h1>
      Trading - {symbol.toUpperCase()}
    </h1>
    <SymbolDashboard symbol={symbol} client:load />
  </header>
</IndexLayout>
